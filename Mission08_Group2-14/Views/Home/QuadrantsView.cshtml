@model List<Tasks>
<link rel="stylesheet" type="text/css" href="css/matrix-style.css">

<!DOCTYPE html>
<html>
<head>
    <title>Time Management Matrix</title>
    <link rel="stylesheet" type="text/css" href="~/css/matrix-style.css">
</head>
<body>
    <div class="matrix">
        <h1>Time Management Matrix</h1>
        <table >
            <thead>
                <tr>
                    <th></th>
                    <th>Urgent</th>
                    <th>Not Urgent</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Important</th>
                    <td>
                        <div class="quadrant-title">Quadrant 1</div>
                        <ul>
                            @foreach (var task in Model.Where(t => t.Quadrant == 1))
                            {
                                <li>
                                    @task.TaskName
                                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                                </li>
                            }
                        </ul>

                    </td>
                    <td>
                        <div class="quadrant-title">Quadrant 2</div>
                        <ul>
                            @foreach (var task in Model.Where(t => t.Quadrant == 2))
                            {
                                <li>
                                    @task.TaskName
                                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Not Important</th>
                    <td>
                        <div class="quadrant-title">Quadrant 3</div>
                        <ul>
                            @foreach (var task in Model.Where(t => t.Quadrant == 3)) 
                            {
                                <li>
                                    @task.TaskName
                                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>

                                </li>
                            }
                        </ul>
                    </td>
                    <td>
                        <div class="quadrant-title">Quadrant 4</div>
                        <ul>
                            @foreach (var task in Model.Where(t => t.Quadrant == 4))
                            {
                                <li>
                                    @task.TaskName
                                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                                    <br />
                                    <br />
                                </li>
                            }
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
